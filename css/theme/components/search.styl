.search
    &--home
        width: viewport
        max-width: 100%
        margin: 100px auto
        border: solid 1px #e1e1e1
        padding: 25px 0

        .search
            &__form
                display: flex
                justify-content: flex-start
                align-items: center

            &__input
                border: 0
                box-shadow: none
                height: 48px
                // padding-left: 70px
                font-size: 12px
                text-transform: uppercase
                color: #000

                &::placeholder
                    color: #000
                    font-weight: bold

                &:focus::placeholder
                    color: transparent

            &__button
                order: -1
                height: 48px
                background: none
                box-shadow: none
                font-size: 15px
                font-weight: bold
                text-transform: uppercase
                color: #000
                border-right: solid 3px #000
                border-radius: 0

        .input-box
            flex: 1
            min-width: 0

    .header &
        position: fixed
        top: 0
        left: 0
        z-index: 100
        width: 100%
        height: 100%
        background: rgba(0, 0, 0, 0.5)
        justify-content: center
        align-items: center
        transition: all
        visibility: hidden
        opacity: 0

        &.on
            position: fixed
            display: flex
            visibility: visible
            opacity: 1

        .search
            &__form
                position: relative
                display: flex
                width: 900px
                max-width: 90%

                &:before
                    icon('\f00d')
                    position: absolute
                    bottom: 100%
                    right: 0
                    display: flex
                    justify-content: flex-end
                    align-items: flex-start
                    width: 48px
                    height: 48px
                    font-size: 28px
                    color: #fff

                .input-box
                    flex: 1
                    min-width: 0

            &__input
                height: 48px
                border-radius: 0

            &__button
                border-radius: 0

    &__open
        width: 30px
        height: 48px
        background: #fff
        box-shadow: none
        padding: 16px 5px

        .ico
            width: 15px
            height: 15px
            fill: #000
            transform: scaleX(-1)

        &:hover
            background: #fff

            .ico
                fill: #000

@media (min-width: 993px)
    .search
        &__open
            width: 48px

        &--home
            .search
                &__button
                    width: 200px
                    height: 58px

                &__input
                    padding-left: 70px
                    height: 58px
