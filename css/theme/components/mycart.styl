.mycart
    .header &
        margin: 0
        height: auto

        .mycart
            &__header
                a
                    display: flex
                    justify-content: center
                    align-items: center
                    min-height: 48px
                    padding: 0 5px

                .ico
                    width: 18px
                    height: 15px

                .qtd
                    margin-left: 7px
                    font-size: 12px
                    font-weight: bold

            &__content
                display: none

@media (min-width: 993px)
    .mycart
        .header &
            .mycart
                &__header a
                    padding: 0 15px
