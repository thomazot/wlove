.cms-sobre
    .breadcrumb
        display: none

.sobre
    .socials
        &__list
            display: flex

        &__img
            filter: invert(100%)
            max-height: 15px
            max-width: 20px
            opacity: 0.7

    .std &__container
        margin: 30px 0

        &:first-child
            margin-top: 0

    &__content
        padding: 30px 0

    .std &__title
        &--h1
            font-family: font-two
            font-size: 30px
            text-transform: uppercase
            color: #000
            line-height: 1.3
            position: relative
            padding-bottom: 25px
            margin-bottom: 40px

            &:after
                content: ''
                position: absolute
                bottom: 0
                left: 0
                height: 1px
                background: #747474
                width: 45px

        &--h2
            font-size: 20px
            font-weight: 600
            font-family: font-two
            line-height: 1.3
            color: #000000
            text-transform: uppercase
            margin: 0

        &--h3
            font-size: 13px
            font-weight: 700
            text-transform: uppercase
            color: #211f1f
            letter-spacing: 2px
            display: block
            margin: 40px 0

    .std &__link
        font-size: 20px
        font-weight: 600
        font-family: font-two
        line-height: 48px
        text-transform: uppercase
        color: #e7bdae

    .std &__social
        &-title
            font-size: 20px
            color: #737373
            font-weight: 400

    .std &__text
        font-size: 20px
        font-weight: 400
        color: #6f6f6f
        line-height: 30px

@media (min-width: 993px)
    .sobre
        .std &__title
            &--h1
                font-size: 65px

            &--h2
                font-size: 40px

            &--h3
                font-size: 23px

        .std &__link
            font-size: 40px

        &__container
            display: flex
            justify-content: space-between
            margin: 75px

            &--rtl
                justify-content: flex-end

                .sobre__banner
                    order: -1
                    left: auto
                    right: 0

        &__content
            flex: 0 0 50%
            padding: 30px

        &__banner
            position: relative
            top: 0
            left: 0
            width: 50vw
            flex: 0 0 50vw

            img
                object-fit: cover
                width: 100%
                height: 100%
